<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.DetailActivity">



    <ImageView
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageViewDetail"
        android:layout_width="250dp"
        android:layout_height="250dp" />

    <TextView
        android:id="@+id/txtDetailTitleMission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewDetail"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:textSize="40dp" />

    <TextView
        android:layout_below="@+id/txtDetailTitleMission"
        android:id="@+id/txtDetails"
        android:gravity="center"
        android:layout_width="318dp"
        android:layout_height="91dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="27dp"
        android:text='Successful first stage burn and transition to second stage, maximum altitude 289 km, Premature engine shutdown at T+7 min 30 s, Failed to reach orbit, Failed to recover first stage",'
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_below="@id/txtDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/llayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtFlightlbl"
            android:layout_marginLeft="90dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Flight Number :" />

        <TextView
            android:id="@+id/txtFlight"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>



    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/llayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/llayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtYearlbl"
            android:layout_marginLeft="90dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Flight Year :" />

        <TextView
            android:id="@+id/txtYear"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>



    </LinearLayout>

    <TextView
        android:id="@+id/txtDetailRocket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llayout2"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="Rocket Details"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_below="@id/txtDetailRocket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/llayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtRocketNamelbl"
            android:layout_marginLeft="90dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Flight Year :" />

        <TextView
            android:id="@+id/txtRocketName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>



    </LinearLayout>


    <LinearLayout
        android:layout_below="@id/llayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/llayout4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtRocketTypelbl"
            android:layout_marginLeft="90dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Flight Year :" />

        <TextView
            android:id="@+id/txtRocketType"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>



    </LinearLayout>

    <TextView
        android:clickable="true"
        android:id="@+id/txtYoutube"
        android:layout_below="@id/llayout4"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="46dp"
        android:layout_marginStart="18dp"
        android:text="Click Here"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="323dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />




</RelativeLayout>